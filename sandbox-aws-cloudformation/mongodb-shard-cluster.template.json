{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description" : "MongoDB Shard Cluster template",
    "Parameters" : {
        "KeyName" : {
            "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the web server",
            "Type" : "String"
        },
        "MongoClientInstanceType" : {
            "Description" : "EC2 instance type for the mongo client",
            "Default" : "t1.micro",
            "Type" : "String"
        },
        "ShardServerInstanceType" : {
            "Description" : "EC2 instance type for the shard server",
            "Default" : "t1.micro",
            "Type" : "String"
        },
        "ConfigServerInstanceType" : {
            "Description" : "EC2 instance type for the config server",
            "Default" : "t1.micro",
            "Type" : "String"
        }
    },
    "Mappings" : {
        "RegionToAMI" : {
            "ap-northeast-1" : { "AMI" : "ami-a1bec3a0" }
        },
        "GroupToCIDR" : {
            "VPC" : { "CIDR" : "10.0.0.0/16" },
            "FrontendSubnet" : { "CIDR" : "10.0.0.0/24" },
            "BackendSubnet" : { "CIDR" : "10.0.1.0/24" }
        },
        "ServerToIp" : {
            "ShardServerClueter1Node1" : { "Ip" : "10.0.1.11" },
            "ConfigServerNode1" : { "Ip" : "10.0.1.101" }
        }
    },
    "Resources" : {
        "VPC" : {
            "Type" : "AWS::EC2::VPC",
            "Properties" : {
                "CidrBlock" : { "Fn::FindInMap" : [ "GroupToCIDR", "VPC", "CIDR" ]},
                "InstanceTenancy" : "default"
            }
        },
        "InternetGateway" : {
            "Type" : "AWS::EC2::InternetGateway"
        },
        "AttachGateway" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "InternetGatewayId" : { "Ref" : "InternetGateway" }
            }
        },
        "PublicRouteTable" : {
            "Type" : "AWS::EC2::RouteTable",
            "DependsOn" : "AttachGateway",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" }
            }
        },
        "PrivateRouteTable" : {
            "Type" : "AWS::EC2::RouteTable",
            "DependsOn" : "AttachGateway",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" }
            }
        },
        "PublicRoute" : {
            "Type" : "AWS::EC2::Route",
            "DependsOn" : "AttachGateway",
            "Properties" : {
                "RouteTableId" : { "Ref" : "PublicRouteTable" },
                "DestinationCidrBlock" : "0.0.0.0/0",
                "GatewayId" : { "Ref" : "InternetGateway" }
            }
        },
        "FrontendSubnet" : {
            "Type" : "AWS::EC2::Subnet",
            "DependsOn" : "AttachGateway",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "AvailabilityZone" : { "Fn::Select" : [ "0", { "Fn::GetAZs" : { "Ref" : "AWS::Region" }}]},
                "CidrBlock" : { "Fn::FindInMap" : [ "GroupToCIDR", "FrontendSubnet", "CIDR" ]}
            }
        },
        "BackendSubnet" : {
            "Type" : "AWS::EC2::Subnet",
            "DependsOn" : "AttachGateway",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "AvailabilityZone" : { "Fn::Select" : [ "0", { "Fn::GetAZs" : { "Ref" : "AWS::Region" }}]},
                "CidrBlock" : { "Fn::FindInMap" : [ "GroupToCIDR", "BackendSubnet", "CIDR" ]}
            }
        },
        "FrontendSubnetRouteTableAssociation" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "SubnetId" : { "Ref" : "FrontendSubnet" },
                "RouteTableId" : { "Ref" : "PublicRouteTable" }
            }
        },
        "BackendSubnetRouteTableAssociation" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "SubnetId" : { "Ref" : "BackendSubnet" },
                "RouteTableId" : { "Ref" : "PublicRouteTable" }
            }
        },
        "VPCDefaultSecurityGroup" : {
            "Type" : "AWS::EC2::SecurityGroup",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "GroupDescription" : "Allow all communications in VPC",
                "SecurityGroupIngress" : [
                    { "IpProtocol" : "tcp", "FromPort" : "0", "ToPort" : "65535", "CidrIp" : { "Fn::FindInMap" : [ "GroupToCIDR", "VPC", "CIDR" ]}},
                    { "IpProtocol" : "udp", "FromPort" : "0", "ToPort" : "65535", "CidrIp" : { "Fn::FindInMap" : [ "GroupToCIDR", "VPC", "CIDR" ]}},
                    { "IpProtocol" : "icmp", "FromPort" : "-1", "ToPort" : "-1", "CidrIp" : { "Fn::FindInMap" : [ "GroupToCIDR", "VPC", "CIDR" ]}}
                ]
            }
        },
        "SSHSecurityGroup" : {
            "Type" : "AWS::EC2::SecurityGroup",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "GroupDescription" : "Enable SSH access via port 22",
                "SecurityGroupIngress" : [
                    { "IpProtocol" : "tcp", "FromPort" : "22", "ToPort" : "22", "CidrIp" : "0.0.0.0/0" }
                ]
            }
        },
        "MongoClient" : {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "ImageId" : { "Fn::FindInMap" : [ "RegionToAMI", { "Ref" : "AWS::Region" }, "AMI" ]},
                "InstanceType" : { "Ref" : "MongoClientInstanceType" },
                "NetworkInterfaces" : [
                    {
                        "DeviceIndex" : "0",
                        "SubnetId" : { "Ref" : "FrontendSubnet" },
                        "GroupSet" : [
                            { "Ref" : "VPCDefaultSecurityGroup" },
                            { "Ref" : "SSHSecurityGroup" }
                        ],
                        "AssociatePublicIpAddress" : "true"
                    }
                ],
                "KeyName" : { "Ref" : "KeyName" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["", [
                    "#!/bin/bash -xe\n",
                    "yum update -y aws-cfn-botstrap\n",

                    "/opt/aws/bin/cfn-init ",
                    "    --stack ", { "Ref" : "AWS::StackId" },
                    "    --resource MongoClient ",
                    "    --region ", { "Ref" : "AWS::Region" }, "\n",

                    "/opt/aws/bin/cfn-signal -e $? ",
                    "    --stack ", { "Ref" : "AWS::StackId" },
                    "    --resource MongoClient ",
                    "    --region ", { "Ref" : "AWS::Region" }, "\n"
                ]]}}
            },
            "Metadata" : {
                "AWS::CloudFormation::Init" : {
                    "configSets" : {
                        "default" : [ "SetupRepos", "Install" ]
                    },
                    "SetupRepos" : {
                        "files" : {
                            "/etc/yum.repos.d/mongodb-org-3.2.repo" : {
                                "content" : { "Fn::Join" : [ "", [
                                    "[mongodb-org-3.2]\n",
                                    "name=MongoDB Repository\n",
                                    "baseurl=https://repo.mongodb.org/yum/amazon/2013.03/mongodb-org/3.2/x86_64/\n",
                                    "gpgcheck=1\n",
                                    "enabled=1\n"
                                ]]},
                                "mode" : "000644",
                                "owner" : "root",
                                "group" : "root"
                            }
                        },
                        "commands" : {
                            "import_mongodb_public_key" : {
                                "command" : "rpm --import https://www.mongodb.org/static/pgp/server-3.2.asc"
                            }
                        }
                    },
                    "Install" : {
                        "packages" : {
                            "yum" : {
                                "mongodb-org-mongos" : [],
                                "mongodb-org-shell" : [],
                                "mongodb-org-tools" : []
                            }
                        }
                    }
                }
            }
        },
        "ShardServerClueter1Node1" : {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "ImageId" : { "Fn::FindInMap" : [ "RegionToAMI", { "Ref" : "AWS::Region" }, "AMI" ]},
                "InstanceType" : { "Ref" : "ShardServerInstanceType" },
                "NetworkInterfaces" : [
                    {
                        "DeviceIndex" : "0",
                        "SubnetId" : { "Ref" : "BackendSubnet" },
                        "GroupSet" : [
                            { "Ref" : "VPCDefaultSecurityGroup" }
                        ],
                        "PrivateIpAddress" : { "Fn::FindInMap" : [ "ServerToIp", "ShardServerClueter1Node1", "Ip" ]},
                        "AssociatePublicIpAddress" : "true"
                    }
                ],
                "KeyName" : { "Ref" : "KeyName" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["", [
                    "#!/bin/bash -xe\n",
                    "yum update -y aws-cfn-botstrap\n",

                    "/opt/aws/bin/cfn-init ",
                    "    --stack ", { "Ref" : "AWS::StackId" },
                    "    --resource ShardServerClueter1Node1 ",
                    "    --region ", { "Ref" : "AWS::Region" }, "\n",

                    "/opt/aws/bin/cfn-signal -e $? ",
                    "    --stack ", { "Ref" : "AWS::StackId" },
                    "    --resource ShardServerClueter1Node1 ",
                    "    --region ", { "Ref" : "AWS::Region" }, "\n"
                ]]}}
            },
            "Metadata" : {
                "AWS::CloudFormation::Init" : {
                    "configSets" : {
                        "default" : [ "SetupRepos", "Install" ]
                    },
                    "SetupRepos" : {
                        "files" : {
                            "/etc/yum.repos.d/mongodb-org-3.2.repo" : {
                                "content" : { "Fn::Join" : [ "", [
                                    "[mongodb-org-3.2]\n",
                                    "name=MongoDB Repository\n",
                                    "baseurl=https://repo.mongodb.org/yum/amazon/2013.03/mongodb-org/3.2/x86_64/\n",
                                    "gpgcheck=1\n",
                                    "enabled=1\n"
                                ]]},
                                "mode" : "000644",
                                "owner" : "root",
                                "group" : "root"
                            }
                        },
                        "commands" : {
                            "import_mongodb_public_key" : {
                                "command" : "rpm --import https://www.mongodb.org/static/pgp/server-3.2.asc"
                            }
                        }
                    },
                    "Install" : {
                        "packages" : {
                            "yum" : {
                                "mongodb-org-server" : [],
                                "mongodb-org-shell" : [],
                                "mongodb-org-tools" : []
                            }
                        }
                    }
                }
            }
        },
        "ConfigServerNode1" : {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "ImageId" : { "Fn::FindInMap" : [ "RegionToAMI", { "Ref" : "AWS::Region" }, "AMI" ]},
                "InstanceType" : { "Ref" : "ConfigServerInstanceType" },
                "NetworkInterfaces" : [
                    {
                        "DeviceIndex" : "0",
                        "SubnetId" : { "Ref" : "BackendSubnet" },
                        "PrivateIpAddress" : { "Fn::FindInMap" : [ "ServerToIp", "ConfigServerNode1", "Ip" ]},
                        "GroupSet" : [
                            { "Ref" : "VPCDefaultSecurityGroup" }
                        ],
                        "AssociatePublicIpAddress" : "true"
                    }
                ],
                "KeyName" : { "Ref" : "KeyName" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["", [
                    "#!/bin/bash -xe\n",
                    "yum update -y aws-cfn-botstrap\n",

                    "/opt/aws/bin/cfn-init ",
                    "    --stack ", { "Ref" : "AWS::StackId" },
                    "    --resource ConfigServerNode1 ",
                    "    --region ", { "Ref" : "AWS::Region" }, "\n",

                    "/opt/aws/bin/cfn-signal -e $? ",
                    "    --stack ", { "Ref" : "AWS::StackId" },
                    "    --resource ConfigServerNode1 ",
                    "    --region ", { "Ref" : "AWS::Region" }, "\n"
                ]]}}
            },
            "Metadata" : {
                "AWS::CloudFormation::Init" : {
                    "configSets" : {
                        "default" : [ "SetupRepos", "Install" ]
                    },
                    "SetupRepos" : {
                        "files" : {
                            "/etc/yum.repos.d/mongodb-org-3.2.repo" : {
                                "content" : { "Fn::Join" : [ "", [
                                    "[mongodb-org-3.2]\n",
                                    "name=MongoDB Repository\n",
                                    "baseurl=https://repo.mongodb.org/yum/amazon/2013.03/mongodb-org/3.2/x86_64/\n",
                                    "gpgcheck=1\n",
                                    "enabled=1\n"
                                ]]},
                                "mode" : "000644",
                                "owner" : "root",
                                "group" : "root"
                            }
                        },
                        "commands" : {
                            "import_mongodb_public_key" : {
                                "command" : "rpm --import https://www.mongodb.org/static/pgp/server-3.2.asc"
                            }
                        }
                    },
                    "Install" : {
                        "packages" : {
                            "yum" : {
                                "mongodb-org-server" : [],
                                "mongodb-org-shell" : [],
                                "mongodb-org-tools" : []
                            }
                        }
                    }
                }
            }
        }
    },
    "Outputs" : {
        "SSHToMongoClient" : {
            "Description" : "SSH command to connect MongoClient",
            "Value" : { "Fn::Join" : [ "", [
                "ssh",
                " -i ~/.ssh/", { "Ref" : "KeyName" }, ".pem",
                " ec2-user@", { "Fn::GetAtt" : [ "MongoClient", "PublicIp" ]}
            ]]}
        }
    }
}
