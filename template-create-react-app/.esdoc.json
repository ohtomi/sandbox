{
    "source": "./src",
    "destination": "./docs",
    "plugins": [
        {
            "name": "esdoc-standard-plugin",
            "option": {
                "test": {
                    "source": "./test/",
                    "interfaces": [
                        "describe",
                        "it",
                        "context",
                        "suite",
                        "test"
                    ],
                    "includes": [
                        "(spec|Spec|test|Test)\\.js$"
                    ],
                    "excludes": [
                        "\\.config\\.js$"
                    ]
                }
            }
        }
    ]
}
